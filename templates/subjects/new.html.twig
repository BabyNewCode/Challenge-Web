{% extends 'base.html.twig' %}

{% block title %}New Subjects{% endblock %}

{% block body %}
    <h1>Create new Subjects</h1>

    {{ include('subjects/_form.html.twig') }}

    <button class="back-btn" onclick="window.location.href='{{ path('app_subjects') }}'">Back to list</button>

    <style>
        /* Style global de la page */
        body {
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 28px;
            font-weight: 600;
            margin: 30px 0;
            color: #e81cff;
        }

        /* Style du bouton "Back to list" */
        .back-btn {
            background-color: #313131;
            color: #fff;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .back-btn:hover {
            background-color: #40c9ff;
        }

        .back-btn:active {
            transform: scale(0.98);
        }

        /* Style responsive */
        @media (max-width: 768px) {
            h1 {
                font-size: 24px;
            }
        }
    </style>
{% endblock %}
