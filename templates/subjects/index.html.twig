{% extends 'base.html.twig' %}

{% block title %}Cause à soutenir
{% endblock %}
{% set subjects = subjects|slice(0, 1) %}
{% block body %}
	<style>
		/* Titre centré avec effet */
		.page-title {
			text-align: center;
			font-size: 2.5em;
			font-weight: bold;
			margin: 40px 0;
			color: white;
			text-shadow: 2px 2px 0 #000, /* Ombre en bas à droite */
			-2px -2px 0 #000, /* Ombre en haut à gauche */
			-2px 2px 0 #000, /* Ombre en bas à gauche */
			2px -2px 0 #000; /* Ombre en haut à droite */

			animation: fadeIn 2s ease-in-out;
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(-20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		/* Style des cartes */
		.e-card {
			margin: 20px;
			background: linear-gradient(135deg, #5b42f3, #00ddeb);
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
			position: relative;
			width: 240px;
			height: 330px;
			border-radius: 16px;
			overflow: hidden;
			transition: transform 0.5s ease, background 0.5s ease;
			transform-style: preserve-3d;
			transform: perspective(1000px);
		}

		.e-card:hover {
			transform: perspective(1000px) rotateY(20deg) rotateX(10deg);
			background: linear-gradient(135deg, #af40ff, #ff4edf);
			box-shadow: 0 15px 40px rgba(0, 0, 0, 0.6);
		}

		.wave {
			position: absolute;
			width: 100%;
			height: 100%;
			background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 20%, transparent 80%);
			animation: pulse 3s infinite ease-in-out;
		}

		@keyframes pulse {
			0,
			100% {
				transform: scale(1);
				opacity: 0.8;
			}
			50% {
				transform: scale(1.2);
				opacity: 1;
			}
		}

		.infotop {
			text-align: center;
			font-size: 20px;
			position: absolute;
			top: 5.6em;
			left: 0;
			right: 0;
			color: rgb(255, 255, 255);
			font-weight: 600;
			transform: translateZ(20px); /* Pousse le texte en avant dans l'espace 3D */
		}

		.name {
			font-size: 14px;
			font-weight: 100;
			position: relative;
			top: 1em;
			text-transform: lowercase;
			opacity: 0;
			transition: opacity 0.5s ease;
			transform: translateZ(20px); /* Pousse également le sous-texte */

		}


		.e-card:hover .name {
			opacity: 1;
		}
		.e-card:hover .img {
			opacity: 1;
		}
		/* Disposition des cartes centrée */
		.row {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-items: center;
		}

		/* Style du bouton "Ajouter une cause" */
		.add-cause-btn {
			position: absolute;
			top: 100px;
			right: 25px;
			padding: 10px 15px;
			font-size: 15px;
			background-color: #af40ff;
			color: white;
			border: flex;
			border-color: red;
			border-radius: 25px;
			cursor: pointer;
			transition: background-color 0.3s ease;
		}

		.add-cause-btn:hover {
			background-color: navy;
		}
		.selection:hover {
			transform: scale(1.5)
		}

		/*style du bouton pour Lancer*/
		.custom-button,
		.custom-button::after {
			height: 200px;
			width: 400px;
			padding: 16px 20px;
			font-size: 18px;
			background: linear-gradient(45deg, transparent 5%, #ff013c 5%);
			border: 0;
			color: #fff;
			letter-spacing: 3px;
			line-height: 1;
			box-shadow: 6px 0 0 #00e6f6;
			outline: transparent;
			position: relative;
			border-radius: 5px; /* Bootstrap-style rounded corners */
			font-size: 50px; /* Increase font size for "LANCER" text */
		}

		.custom-button::after {
			--slice-0: inset(50% 50% 50% 50%);
			--slice-1: inset(80% -6px 0 0);
			--slice-2: inset(50% -6px 30% 0);
			--slice-3: inset(10% -6px 85% 0);
			--slice-4: inset(40% -6px 43% 0);
			--slice-5: inset(80% -6px 5% 0);
			content: "LUNCH";
			display: block;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: linear-gradient(45deg, transparent 3%, #00e6f6 3%, #00e6f6 5%, #ff013c 5%);
			text-shadow: -3px -3px 0 #f8f005, 3px 3px 0 #00e6f6;
			clip-path: var(--slice-0);
		}

		.custom-button:hover::after {
			animation: 1s glitch;
			animation-timing-function: steps(2, end);
		}

		@keyframes glitch {
			0% {
				clip-path: var(--slice-1);
				transform: translate(-20px, -10px);
			}

			10% {
				clip-path: var(--slice-3);
				transform: translate(10px, 10px);
			}

			20% {
				clip-path: var(--slice-1);
				transform: translate(-10px, 10px);
			}

			30% {
				clip-path: var(--slice-3);
				transform: translate(0px, 5px);
			}

			40% {
				clip-path: var(--slice-2);
				transform: translate(-5px, 0px);
			}

			50% {
				clip-path: var(--slice-3);
				transform: translate(5px, 0px);
			}

			60% {
				clip-path: var(--slice-4);
				transform: translate(5px, 10px);
			}

			70% {
				clip-path: var(--slice-2);
				transform: translate(-10px, 10px);
			}

			80% {
				clip-path: var(--slice-5);
				transform: translate(20px, -10px);
			}

			90% {
				clip-path: var(--slice-1);
				transform: translate(-10px, 0px);
			}

			100% {
				clip-path: var(--slice-1);
				transform: translate(0);
			}
		}
	</style>

